<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".splash"
    android:background="@color/purple_500">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:layout_marginBottom="30dp">

    </ImageView>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/tutorials"
        android:layout_centerInParent="true"
        android:layout_above="@+id/word1"
        android:layout_marginBottom="20dp">

    </ImageView>

    <TextView
        android:id="@+id/word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text="DIGITAL EARNING GUIDE"
        android:textColor="#FDFDFD"
        android:textSize="25dp"
        android:textStyle="bold|italic">

    </TextView>

    <TextView
        android:id="@+id/word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash"
        android:layout_centerInParent="true"
        android:text="Welcome to Digital World"
        android:textColor="#FDFDFC"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>




</RelativeLayout>

</RelativeLayout>